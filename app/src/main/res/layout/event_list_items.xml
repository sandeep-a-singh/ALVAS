<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/shape_edittext_default"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_gravity="center">
        <TextView
            android:gravity="center"
android:id="@+id/student_event__sr_no"
            android:text="NO"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"></TextView>
        <View
            android:layout_width="2dp"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:background="@color/colorLight" />

        <TextView

            android:id="@+id/student_event_name"
            android:text="EVENT NAME"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"></TextView>
        <View

            android:layout_gravity="center"
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="@color/colorLight" />
        <LinearLayout
            android:gravity="center"


            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            >
            <ImageView
                android:id="@+id/student_events_status"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/done_default_48"/>

        </LinearLayout>

    </LinearLayout>

